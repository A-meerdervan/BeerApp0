<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.project.bieraanbiedingnotificatie" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!--This is used to be able to set the reating alarm functionality to update the discounts, back-->
    <!--in place-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!--android.supp  android.support.PARENT_ACTIVITY-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotificatieRegelActivity"
            android:label="@string/title_activity_notificatie_regel"
            android:parentActivityName="nl.mprog.project.bieraanbiedingnotificatie.HomeScreenActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.mprog.project.bieraanbiedingnotificatie.HomeScreenActivity" />
        </activity>
        <activity
            android:name=".AlleAanbiedingenActivity"
            android:label="@string/title_activity_alle_aanbiedingen"
            android:parentActivityName="nl.mprog.project.bieraanbiedingnotificatie.HomeScreenActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.mprog.project.bieraanbiedingnotificatie.HomeScreenActivity" />
        </activity>

        <receiver android:name=".NightUpdate">

        </receiver>

        <receiver android:name=".ResetAlarmOnBoot"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>

    </application>

</manifest>

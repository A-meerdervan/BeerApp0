<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="customButtonStyle" >
        <item name="android:textSize">@dimen/textLarge1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="notify_activityTopTV" >
        <item name="android:background">@drawable/notify_top_positive</item>
        <!--<item name="android:textColor">#FFFF</item>-->
        <item name="android:textColor">@color/Black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <!--<item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>-->


    </style>

    <style name="fragmentStyle" >
        <item name="android:background">@drawable/fragment_background</item>
    </style>

    <style name="favoriteBeersList" >
        <item name="android:background">@drawable/favoritebeers_list</item>
    </style>

</resources>

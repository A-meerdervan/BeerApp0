<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.mprog.project.bieraanbiedingnotificatie.FilterFragment"
    android:background="@color/MainButtonColor"
    android:clickable="true">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Sorteer en of filter de aanbiedingen: "
        android:id="@+id/filterIntroTV"/>

    <LinearLayout
        android:layout_below="@+id/filterIntroTV"
        android:layout_marginTop="@dimen/MarginTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/MarginTop">

        <!--Sorting lin lay-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/sortLinLayout">

            <TextView android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sorteer op: "
                android:textSize="14sp"
                android:textColor="@color/Black"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sortSpinner">

            </Spinner>

        </LinearLayout>


        <TextView android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Filter opties: "
            android:textSize="14sp"
            android:textColor="@color/Black"/>

        <!--Max price lin layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/maxPriceLinLayout">

            <TextView android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Maximum prijs:  "
                android:textSize="14sp"
                android:textColor="@color/Black"/>

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/maxPriceET" />

        </LinearLayout>

        <!--max afstand lin layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/maxDistanceLinLayout">

            <TextView android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Maximum aftstand:  "
                android:textSize="14sp"
                android:textColor="@color/Black"/>

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/maxDistanceET" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/MarginTop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Bier selectie  "
            android:textSize="16sp"
            android:textColor="@color/Black"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amstel"
                android:id="@+id/checkBox" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heiniken"
                android:id="@+id/checkBox2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hertog jan"
                android:id="@+id/checkBox3" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:id="@+id/checkBox6" />
        </RadioGroup>

        <TextView
            android:layout_marginTop="@dimen/MarginTopSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Supermarkt selectie  "
            android:textSize="16sp"
            android:textColor="@color/Black"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abert heijn"
                android:id="@+id/checkBoxx" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plus"
                android:id="@+id/checkBoxx2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumbo"
                android:id="@+id/checkBoxx3" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spar"
                android:id="@+id/checkBoxx4" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aldi"
                android:id="@+id/checkBoxx5" />
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>
